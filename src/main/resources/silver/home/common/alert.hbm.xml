<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="silver.home.common.Alert" table="alert" catalog="silverDB">
     	<id name="idAlert" type="string">
            <column name="idalert" length="30"/>
        </id>
        <property name="alertContent" type="string">
            <column name="message_alert" length="45" not-null="false" unique="false" />
        </property>
        <one-to-one name="patientData" class="silver.home.common.PatientData" constrained="true"></one-to-one>
    </class>
</hibernate-mapping>